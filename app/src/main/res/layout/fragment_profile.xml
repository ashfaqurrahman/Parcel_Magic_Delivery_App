<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#fcfcff"
        android:clickable="true"
        android:focusable="true"
        tools:context=".view.main.ProfileFragment">

        <include layout="@layout/custom_toolbar_profile"
            android:id="@+id/toolbar"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:background="@color/teal_200"/>

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_marginTop="-60dp"
            android:layout_height="120dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/empty_image"/>

            <ImageView
                android:id="@+id/imageUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_edit_profile"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                tools:text="Badol Mondal"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="normal"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/edit_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/your_name"
                android:textColor="@color/text_color"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                android:visibility="gone"
                android:inputType="textCapWords"
                android:textColorHint="#808080"
                android:textCursorDrawable="@null"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="-4dp"/>

            <ImageView
                android:id="@+id/edit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:padding="2dp"
                android:src="@drawable/ic_edit" />

        </LinearLayout>

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="5dp"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="#b5b7dd"
            android:lineSpacingExtra="12sp"
            android:text="Dhaka, Bangladesh"
            />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="5dp"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="#b5b7dd"
            android:lineSpacingExtra="12sp"
            android:text="Dhaka, Bangladesh"
            />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="0.0"
            android:progressDrawable="@drawable/custom_ratingbar_selector"
            android:layout_marginTop="18dp"
            android:isIndicator="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#E8EBF5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="34dp"
                    android:paddingBottom="34dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="#3b5998"
                        android:gravity="center_horizontal"
                        android:text="Delivery \nCompleted"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textStyle="normal"
                        android:textSize="28sp"
                        android:textColor="#3b5998"
                        android:lineSpacingExtra="33sp"
                        android:text="00"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#fce8eb">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="34dp"
                    android:paddingBottom="34dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        android:textColor="#ff4141"
                        android:gravity="center_horizontal"
                        android:text="Delivery is \npending"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textStyle="normal"
                        android:textSize="28sp"
                        android:textColor="#ff4141"
                        android:lineSpacingExtra="33sp"
                        android:text="00"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</layout>
