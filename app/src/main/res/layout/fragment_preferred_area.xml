<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical"
        tools:context=".ui.main.PreferredAreaFragment">

        <include layout="@layout/custom_toolbar"
            android:id="@+id/toolbar"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="18sp"
                android:paddingBottom="15dp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#1a1662"
                android:lineSpacingExtra="46sp"
                android:text="@string/add_preferred_area"
                app:drawableEndCompat="@drawable/ic_add" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop= "20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="2dp"
                        android:rotation="90"
                        android:src="@drawable/ic_more"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/mohammodpur_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/ic_preferred_area"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:textColor="#11123e"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/mohammadpur"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_regular"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:textColor="#b5b7dd"
                        android:gravity="center_horizontal"
                        android:text="@string/_25_order_delivered_in_the_area"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="2dp"
                        android:rotation="90"
                        android:src="@drawable/ic_more"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/ic_preferred_area"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingStart="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingEnd="10dp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:textColor="#11123e"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/mohammadpur"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_regular"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:textColor="#b5b7dd"
                        android:gravity="center_horizontal"
                        android:text="@string/_25_order_delivered_in_the_area"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop= "10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="2dp"
                        android:rotation="90"
                        android:src="@drawable/ic_more"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/ic_preferred_area"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:textColor="#11123e"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/mohammadpur"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_regular"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:textColor="#b5b7dd"
                        android:gravity="center_horizontal"
                        android:text="@string/_25_order_delivered_in_the_area"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="2dp"
                        android:rotation="90"
                        android:src="@drawable/ic_more"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/ic_preferred_area"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:textColor="#11123e"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/mohammadpur"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_regular"
                        android:textStyle="normal"
                        android:textSize="13sp"
                        android:textColor="#b5b7dd"
                        android:gravity="center_horizontal"
                        android:text="@string/_25_order_delivered_in_the_area"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</layout>
